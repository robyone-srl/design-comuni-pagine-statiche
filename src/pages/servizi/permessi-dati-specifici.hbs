{{#>cmp-base/base title="Permessi mobilità - Nome del Comune" headerActive3=true}}
<main>
  <div class="container" id="main-container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Servizi" link2="Mobilità e trasporti" active="Permesso ZTL"}}
        {{> cmp-heading/cmp-heading title="Permesso ZTL" description="Hai bisogno di assistenza?
        <a href='' class='title-small-semi-bold t-primary'>Contattaci</a>"}}
      </div>
      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=permessi-autorizzazioni.inserire-dati-specifici.step-3
        step-num="3"
        step-tot="4"
        step-title="Preferenze di Servizio"
        }}
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-lg-3 d-lg-block mb-4 d-none ">
        {{>cmp-navscroll/cmp-navscroll
        accordion-title="INFORMAZIONI RICHIESTE" id="one"
        link-list=permessi-autorizzazioni.inserire-dati-specifici.navscroll}}
      </div>

      <div class="col-12 col-lg-8 offset-lg-1">
        <div class="steppers-content" aria-live="polite">
          <div class="it-page-sections-container">
            <section class="it-page-section" id="permission-type">
              {{#>cmp-card/cmp-card-content-box
              class="p-big"
              bg-grey=true
              h2-class="mb-1"
              margin-class="mb-40 mt-2"
              required-icon=true
              card-title="Tipo di permesso"
              subtitle="Scegli il tipo di permesso ZTL"}}
              {{> cmp-checkbox/checkbox
              class="d-flex flex-column align-items-center bg-white w-100 p-3 p-lg-4"
              info-list=ztl-dati-checkbox.checkbox required=true}}
              {{/cmp-card/cmp-card-content-box}}
            </section>

            <section class="it-page-section" id="validity-period">
              {{#>cmp-card/cmp-card-content-box
              class="p-big"
              bg-grey=true
              h2-class="mb-1"
              required-icon=true
              card-title="Periodo di validità"
              subtitle="Indica il periodo di validità del permesso ZTL"}}

              <div class="d-lg-flex justify-content-between flex-column flex-lg-row">
                {{> cmp-input-calendar/input-calendar
                form-class="mb-0 me-lg-4 p-3 pt-lg-40 pb-lg-40 pl-lg-40"
                label-text="Dal" index="1" required=true}}
                {{> cmp-input-calendar/input-calendar
                form-class="mb-0 p-3 pt-lg-40 pb-lg-40 ps-lg-8 pr-lg-40"
                label-text="Al" index="2" required=true}}
              </div>
              {{/cmp-card/cmp-card-content-box}}
            </section>
          </div>
          {{> cmp-nav-steps/cmp-nav-steps save="true" saveBtn=true aria-label-save="per il permesso ztl"}}
        </div>
      </div>
    </div>
  </div>

  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3 p-contacts">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>
</main>
{{/cmp-base/base }}