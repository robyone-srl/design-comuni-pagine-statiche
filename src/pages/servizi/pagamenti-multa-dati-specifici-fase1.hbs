{{#>cmp-base/base title="Pagamenti - Nome del Comune" headerActive3=true}}
<main>
  <div class="container" id="main-container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Servizi" link2="Tributi, finanze e contravvenzioni" active="Pagamento
        Multa"}}
        {{> cmp-heading/cmp-heading
        title="Pagamento multa"
        subTitle="Inserisci le informazioni necessarie per il pagamento della multa.<span
          class='d-flex d-lg-block mb-lg-2'>Potrai ricontrollare tutti i dati
          nel riepilogo, prima di effettuare il pagamento.</span>"
        description="Hai bisogno di assistenza? <a href='' class='title-small-semi-bold t-primary'>Contattaci</a>"
        desClass="mb-8"
        }}
      </div>

      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=pagamenti-dovuti-multa.info-progress.step-3
        step-num="3"
        step-tot="4"
        step-title="Dati specifici del servizio"
        }}
      </div>
    </div>
    
    <div class="steppers-content" aria-live="polite">
      <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
          <p class="text-paragraph-small mt-3 mb-40 mb-lg-25">I campi contraddistinti dal simbolo asterisco sono
            obbligatori</p>

          {{#>cmp-card/cmp-card-content-box
          class="p-4 pt-lg-30 pb-lg-30 pl-lg-30 pr-lg-30"
          bg-grey=true
          h2-class="mb-0"
          margin-class="mb-0"
          header-m0=true
          card-title="Avvisi di pagamento"
          required-icon=true
          }}
          <p class="subtitle-small pb-4 mb-0">Inserisci il codice di 18 cifre presente nellâ€™avviso della multa.
            <a href="#" class="t-primary d-block d-lg-inline">Dove trovare il codice</a>
          </p>

          <h3 class="h4 mb-3">Avvisi disponibili</h3>
          <div class="cmp-card-radio mb-4">
            <div class="card">
              <div class="card-body">
                <div class="form-check m-0">
                  <div class="radio-body border-bottom border-light pb-2">
                    <input name="rate" type="radio" id="rate-1" required="">
                    <label for="rate-1">Targa: CK 345 HB<br>Avviso: 3456 5678 1234 9012 53</label>
                  </div>
                  <div class="radio-body">
                    <input name="rate" type="radio" id="rate-2">
                    <label for="rate-2" class="active">Targa: CK 345 HB<br>Avviso: 5678 9012 3456 1234 323</label>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <h3 class="h4 mb-3">Inserisci un codice avviso</h3>
          <div class="bg-white">
            {{> cmp-input/input type="text" id="code" name="code" label="Codice avviso" required=true
            formClass="mb-0 mt-0"}}
          </div>
          {{/cmp-card/cmp-card-content-box}}

          {{>cmp-nav-steps/cmp-nav-steps save="true" saveBtn=true validate=true aria-label-save="del pagamento multa" modalId="modal-save-1"
          }}
        </div>
      </div>
    </div>
  </div>

  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3 p-contacts">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>

  {{>cmp-modal/modal-save}}
</main>


{{/cmp-base/base }}